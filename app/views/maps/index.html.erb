<h1>Maps</h1>

<%= link_to 'New Map', new_map_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Exhibition Name</th>
      <th>Map Type</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @maps.each do |map| %>
    <tr>
      <td><%= map.name %></td>
      <td><%= map.exhibition_name %></td>
      <td><%= map.map_type %></td>
      <td>
        <%= link_to 'Show', map_path(map) %> |
        <%= link_to 'Edit', edit_map_path(map) %> |
        <%= link_to 'Destroy', map_path(map), method: :delete, data: {confirm: 'Are you sure?'} %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
